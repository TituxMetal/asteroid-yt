---
import '../styles/globals.css'

export interface LayoutProps {
  title: string
}

const { title } = Astro.props as LayoutProps
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
